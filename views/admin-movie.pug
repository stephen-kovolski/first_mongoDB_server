html

    title Admin Page

    style
        include ../public/admin-movie.css

    script
        include ../public/admin-movie.js
    body

        mixin movieInputs
            input(placeholder='Enter a Movie Id', name='Id')
            input(placeholder='Enter a Movie Title', name='title')
            input(placeholder='Enter a Movie Poster Img Link', name='img', type='url')
            input(placeholder='Enter a Movie Imdb', name='imdb_link', type='url')
            input(placeholder='Enter a Movie Release Year', name='release', type='number', min=currentYear-100, max=new Date().getFullYear()+1)
            input(placeholder='Enter a Movie Order Quantity', type='number', min='0', name='available')

        h1 Post a New Movie
        form#newMovieForm
            +movieInputs
        button#submitMovie Add Movie to Database


        h1 Update a Movie
        form#updateForm
            +movieInputs

        button#submitPatch Update this Movie
